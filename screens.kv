#:kivy 1.9.0

<ScreenOne>:
    name: "screen1"
    ScrollView:
        pos_hint: {'bottom':1}
        do_scroll_y: True
        GridLayout:
            background_normal: ''
            background_color: (0.94,0.68,0.24, 1)
            name: "screen1"
            cols: 1
            padding: 0
            spacing: 0
            #size_hint: None, None

            size_hint_y: None
            height: self.minimum_height

            Button:
                text: "Video 1"
                background_normal: ''
                background_color: (0.65,0.62,0.60, 1) if self.state == 'normal' else (0.502, 0, 0.502, .75)
                on_release: root.onNextScreen(self, 'video1')

            Button:
                text: "Video 2"
                background_normal: ''
                background_color: (0.36,0.33,0.31, 1) if self.state == 'normal' else (0, 0, 1,.75)
                on_release: root.onNextScreen(self, 'video2')

            Button:
                text: "Video 3"
                background_normal: ''
                background_color: (0.94,0.68,0.24, 1) if self.state == 'normal' else (0.251, 0.878, 0.816,.75)
                on_release: root.onNextScreen(self, 'video3')

            Button:
                text: "Video 4"
                background_normal: ''
                background_color: (0.96,0.80,0.64, 1) if self.state == 'normal' else (0, 0.502, 0, .75)
                on_release: root.onNextScreen(self, 'video4')

            Button:
                text: "Audio 1"
                background_normal: ''
                background_color: (0.94,0.49,0.25, 1) if self.state == 'normal' else (0, 0.502, 0, .75)
                on_release: root.onNextScreenAudio(self, 'audio1')

            Button:
                text: "Audio 2"
                background_normal: ''
                background_color: (0.93,0.36,0.24, 1) if self.state == 'normal' else (0, 0.502, 0, .75)
                on_release: root.onNextScreenAudio(self, 'audio2')


<ScreenTwo>:
    GridLayout:
        name: "ScreenGrid"
        pos_hint: {'top': 1}
        cols:1
        rows:2
        ActionBar:
            pos_hint: {'top': 1}
            height:'70sp'
            ActionView:
                ActionPrevious:
                    with_previous: True
                    on_release: root.onBackBtn()

<ScreenThree>:
    GridLayout:
        name: "ScreenGridAudio"
        pos_hint: {'top': 1}
        cols:1
        rows:3
        ActionBar:
            pos_hint: {'top': 1}
            height:'70sp'
            ActionView:
                ActionPrevious:
                    with_previous: True
                    on_release: root.onBackBtn()
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: music_button1
                text:'play'
                on_release: root.on_play()
            Button:
                id: music_button2
                text:'stop'
                on_release: root.on_stop()


<Manager>:
    id: screen_manager

    screen_one: screen_one
    screen_two: screen_two
    screen_three: screen_three
    ScreenOne:
        id: screen_one
        name: 'screen1'
        manager: screen_manager

    ScreenTwo:
        id: screen_two
        name: 'screen2'
        manager: screen_manager

    ScreenThree:
        id: screen_three
        name: 'screen3'
        manager: screen_manager

<VideoPlayer>:
    options: {'eos': 'loop'}
    allow_stretch:True

<Button>:
    height: '100sp'
    size_hint_y: None
